<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VetCare Kenya - Practice Management</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <button class="menu-toggle">
            <i class="fas fa-bars"></i>
        </button>
        <h1><i class="fas fa-paw"></i> Dashboard</h1>
        <div class="user-info">
            <div class="user-avatar">DK</div>
            <span>Dr. Kamau</span>
        </div>
    </header>

    <!-- Overlay for mobile sidebar -->
    <div class="overlay"></div>

    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <h2><i class="fas fa-paw"></i> <span>VetCare Kenya</span></h2>
                <i class="fas fa-chevron-left toggle-arrow"></i>
            </div>
            <div class="sidebar-menu">
                <div class="menu-item active" data-section="dashboard">
                    <i class="fas fa-tachometer-alt"></i>
                    <span class="menu-text">Dashboard</span>
                </div>
                <div class="menu-item" data-section="patients">
                    <i class="fas fa-paw"></i>
                    <span class="menu-text">Patients</span>
                </div>
                <div class="menu-item" data-section="appointments">
                    <i class="fas fa-calendar-alt"></i>
                    <span class="menu-text">Appointments</span>
                </div>
                <div class="menu-item" data-section="payments">
                    <i class="fas fa-money-bill-wave"></i>
                    <span class="menu-text">Payments</span>
                </div>
                <div class="menu-item" data-section="debts">
                    <i class="fas fa-file-invoice-dollar"></i>
                    <span class="menu-text">Debts</span>
                </div>
                <div class="menu-item" data-section="medical-records">
                    <i class="fas fa-notes-medical"></i>
                    <span class="menu-text">Medical Records</span>
                </div>
                <div class="menu-item" data-section="todo">
                    <i class="fas fa-tasks"></i>
                    <span class="menu-text">To-Do List</span>
                </div>
                <div class="menu-item" data-section="reports">
                    <i class="fas fa-chart-bar"></i>
                    <span class="menu-text">Reports</span>
                </div>
                <div class="menu-item" data-section="settings">
                    <i class="fas fa-cog"></i>
                    <span class="menu-text">Settings</span>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">